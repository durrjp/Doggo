@model Doggo.Models.ViewModels.WalkerViewModel;

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Walker</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Walker.Name)
        </dd>
        <dt class="col-sm-2">
            Neighborhood
        </dt>
        <dd class="col-sm-10">
            @Model.Walker.Neighborhood.Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Walker.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img class="bg-info" width="100" src="@Model.Walker.ImageUrl" alt="avatar" />
        </dd>
        <dt class="col-sm-2">
            Walks
        </dt>
        <dd>
            <table style="width:100%">
                <tr>
                    <th>Date</th>
                    <th>Client</th>
                    <th>Duration</th>
                </tr>
                @foreach (Walks walk in Model.Walks)
                {
                    <tr>
                        <td>@walk.Date</td>
                        <td>@walk.Owner.Name</td>
                        <td>@walk.Duration min</td>
                    </tr>
                }
            </table>
        </dd>
        <dt>
            Total Walk Time
        </dt>
        <dd>
            @Model.TotalWalksDuration
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
